<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_item_activity_style"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewItemAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_item_activity_style"
                android:gravity="center"
                android:hint="Click to show the answer"
                android:onClick="showAnswer"
                android:textSize="18sp" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabItemTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            android:onClick="fabItemCorrect"
            android:src="@drawable/ic_floating_button_check_true" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabItemFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:onClick="fabItemFalse"
            android:src="@drawable/ic_floating_button_check_false" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>